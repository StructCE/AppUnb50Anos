<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" 
    android:orientation="vertical">
   

<RelativeLayout 
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >
    
    <ImageView
        android:id="@+id/botton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/splashscreen_menu_botton" />
    
    


    <ImageView
        android:id="@+id/menu_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_bg" />


    <ImageButton
        android:id="@+id/bt_mapa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingTop="2dp"
        android:src="@drawable/bt_mapa_anim" />

    <ImageButton
        android:id="@+id/bt_conq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_mapa"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/bt_mapa"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:paddingBottom="1dp"
        android:scaleType="fitEnd"
        android:src="@drawable/bt_conq_anim" />

    <ImageButton
        android:id="@+id/bt_cred"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_mapa"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:paddingTop="3dp"
        android:scaleType="fitStart"
        android:src="@drawable/bt_cred_anim" />



    <ImageView
        android:id="@+id/menu_marvin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="93dp"
        android:scaleType="fitStart"
        android:src="@drawable/menu_marvin" />

</RelativeLayout>
</LinearLayout>

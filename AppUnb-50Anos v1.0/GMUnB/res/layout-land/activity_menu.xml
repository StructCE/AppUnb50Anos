<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4D4D4D" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12" >

        <ImageView
            android:id="@+id/main_null"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitStart"
            android:src="@drawable/empty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_mapa_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_mapa_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_conq_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_geral_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_cred_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_geral_back" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12" >

        <ImageView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitStart"
            android:src="@drawable/main_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_mapa_nome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitEnd"
                android:src="@drawable/main_bt_mapa_nome" />

            <ImageView
                android:id="@+id/main_bt_mapa_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.06"
                android:scaleType="centerCrop"
                android:src="@drawable/main_bt_division" />

            <ImageButton
                android:id="@+id/main_bt_mapa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_mapa_anim" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_conq_nome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitEnd"
                android:src="@drawable/main_bt_conq_nome" />

            <ImageView
                android:id="@+id/main_bt_conq_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.06"
                android:scaleType="centerCrop"
                android:src="@drawable/main_bt_division" />

            <ImageButton
                android:id="@+id/main_bt_conq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_conq_anim" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/main_bt_cred_nome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.94"
                android:scaleType="fitEnd"
                android:src="@drawable/main_bt_cred_nome" />

            <ImageView
                android:id="@+id/main_bt_cred_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.06"
                android:scaleType="centerCrop"
                android:src="@drawable/main_bt_division" />

            <ImageButton
                android:id="@+id/main_bt_cred"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/main_bt_cred_anim" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_bt_geral_fim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/main_bt_geral_fim" />

    </LinearLayout>

    <ImageView
        android:id="@+id/main_marvin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/menu_marvin" />

</FrameLayout>
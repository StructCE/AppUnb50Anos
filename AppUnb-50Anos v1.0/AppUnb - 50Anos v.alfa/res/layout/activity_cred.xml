                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/bt_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:src="@drawable/bt_f_anim" />

                <ImageButton
                    android:id="@+id/bt_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/bt_face"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/bt_face"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/bt_t_anim" />

                <ImageView
                    android:id="@+id/struct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/bt_twitter"
                    android:layout_marginBottom="10dp"
